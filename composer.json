{
    "name": "rstgroup/zf-consul-service-discovery-module",
    "description": "Module for Zend Framework that allows to register the application in Consul's Service Discovery.",
    "license": "MIT",
    "authors": [
        {
            "name": "Artur Wolny",
            "email": "artur.wolny@rst.com.pl"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-modulemanager": "^2",
        "sensiolabs/consul-php-sdk": "^3",
        "zendframework/zend-console": "^2.6",
        "rstgroup/service-discovery": "^1",
        "zendframework/zend-mvc-console": "^1.1",
        "webmozart/assert": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "suggest": {
        "rstgroup/zf-local-config-module": "To allow saving Consul URL in the configuration during postinstall stage."
    },
    "autoload": {
        "psr-4": {
            "RstGroup\\ZfConsulServiceDiscoveryModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RstGroup\\ZfConsulServiceDiscoveryModule\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "unit-tests": "phpunit",
        "unit-tests-coverage": "phpunit --coverage-html ./results"
    }
}
